	<body>
		<div id="container">
			<header id="header"><h1>Header</h1></header>
			<nav id="navbar">
				<%= render "pages/partials/menu" %>
			</nav>
			<div id="main" role="main">
				<%= yield %>
			</div>
			<footer id="footer"><h1>Footer</h1></footer>
		</div> <!-- end of #container -->

		<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" %>
